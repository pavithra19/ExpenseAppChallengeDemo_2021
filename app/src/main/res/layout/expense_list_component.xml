<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/size_20dp"
    android:paddingRight="@dimen/size_20dp"
    android:paddingTop="@dimen/size_16dp"
    android:paddingBottom="@dimen/size_16dp">

    <TextView
        android:id="@+id/expense_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_15sp"
        android:textColor="@color/text_color_dark"
        tools:text="2021-01-19"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/merchant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_15sp"
        android:layout_marginTop="@dimen/size_10dp"
        android:textColor="@color/text_color_dark"
        tools:text="Remote office supplies store"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expense_date"/>

    <TextView
        android:id="@+id/expense_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_17sp"
        android:layout_marginTop="@dimen/size_10dp"
        android:textColor="@color/text_color_dark"
        android:textStyle="bold"
        tools:text="$100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/merchant_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>